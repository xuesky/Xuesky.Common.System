<!DOCTYPE html>
<html lang="en" class="x-admin-sm">
<head>
    <meta charset="UTF-8">
    <title>学生管理系统--后台登录</title>
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="stylesheet" href="css/font.css">
    <link rel="stylesheet" href="css/login.css">
    <link rel="stylesheet" href="css/xadmin.css">
    <script src="lib/layui/layui.js" charset="utf-8"></script>
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-bg">
    <div class="login layui-anim layui-anim-up">
        <div class="message">XXX学生管理系统-登录</div>
        <div id="darkbannerwrap"></div>
        <form class="layui-form">
            <div class="layui-form-item">
                <input name="userLogin" placeholder="用户名" value="admin" type="text" lay-verify="required" lay-reqText="用户名不能为空" class="layui-input">
            </div>
            <div class="layui-form-item">
                <input name="userPwd" lay-verify="required" placeholder="密码" value="123456" type="password" lay-reqText="密码不能为空" class="layui-input">
            </div>
            <div class="layui-form-item">
                <input value="登录" lay-submit lay-filter="login" style="width:100%;" type="submit">
            </div>
        </form>
    </div>
    <script>
                layui.use('form', function () {
                    var form = layui.form
                        ,$=layui.jquery;
                    //监听提交
                    form.on('submit(login)', function (data) {
                        console.log(data.field);
                        $.post('/login/login', data.field, function (res) {
                            if (res.succeed) {
                                location.href = '@Url.Action("Index","Home")'
                            }
                            else {
                                layer.msg('登录失败', { icon: 2 });
                            }
                        });
                        return false;
                    });
                });
    </script>
</body>
</html>
